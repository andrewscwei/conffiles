{
  "compilerOptions": {
    "declaration": true,
    "diagnostics": true,
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "ESNext",
      "WebWorker"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "outDir": "build",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "build",
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
